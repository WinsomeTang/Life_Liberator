@model Life_Liberator.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" asp-append-version="true" />
    <title>Sign Up | Life Liberator</title>
</head>
<body>
    <!--For going back to index-->

    <section class="sign-up-title">
        <h1>A little bit about you :)</h1>
        <p> Let's create your account</p>
    </section>
    <form asp-action="SignUp" method="post" class="m-2">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="FirstName" class="form-label">First Name:</label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="form-label">Last name:</label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-label">Email:</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="ProficiencyLevel" class="form-label">Proficiency Level:</label>
            <select asp-for="ProficiencyLevel" class="form-select">
                <option value="">Select Programming Proficiency Level: </option>
                <option value="@(ProficiencyLevel.Beginner)">Newb</option>
                <option value="@(ProficiencyLevel.Intermediate)">I know some stuff</option>
                <option value="@(ProficiencyLevel.Intermediate)">I know my shit</option>
            </select>

        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label">Password:</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <button class="sign-up-page-btn" asp-action="ScheduleForm">Next</button>

    </form>
</body>
</html>
